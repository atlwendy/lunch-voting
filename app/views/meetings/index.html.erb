      <%= link_to meeting.date.in_time_zone.strftime("%a, %b %d, %Y"), meeting, :class=>"meetingtime" %>
    </li>
      <li >
        <div class="detail-container">
        <div class="unit sizetime">
          <%= meeting.date.in_time_zone.strftime("%l:%M %p") %>
        </div>
        <div class="unit sizemain">
          <div class="title">
            <%= link_to meeting.title, meeting %> 
          </div>
          <div class="description">
            <%=meeting.description %>
          </div>
          <div class='peoplecount'>
            <%#= pluralize_to_sentence(meeting.users.count) %>
