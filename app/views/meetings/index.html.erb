<% provide(:title, "Meeting index") %>

<div class="listing table-responsive" style="margin-bottom: 10px">
  <div class="buddiestopbar">
      <div class="leftentity">
        <div class="contentwrapper">
          <h1><%=current_user.username%> meeting schedules</h1>
          <h3>when and where is your meeting takes place</h3>
        </div>
      </div>
    </div>

<br>

<div class="listingbox">
  <ul class="listmeetings">
  <% @meetings.each do |meeting| %>
    <li class="meeting-divider">
      <h3><%= meeting.date.in_time_zone.strftime("%a, %b %d, %Y") %></h3>
      <p class="timetext"><%= meeting.date.in_time_zone.strftime("%l:%M %p") %></p>
      <%= link_to meeting.title, meeting %>
      <p class="timetext"><%=meeting.description%></p>
    </li>

  <% end %>
  </ul>

<table class="tlisting table table-striped table-bordered">
  <thead>
    <tr class="thead">
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.title %></td>
        <td><%= meeting.description %></td>
        <td style="text-align: center"><%= meeting.date %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Meeting', new_meeting_path %>
<br >
</div>