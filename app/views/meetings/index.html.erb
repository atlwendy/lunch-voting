            <%#='person is going'.pluralize(meeting.users.count)%> 
            <%#=pluralize(meeting.users.count, 'person')%> <%#="is going".pluralize(meeting.users.count) %><%#=pluralize(meeting.users.count, 'is', 'are') %> 
          </div>
        </div>
      </div>
      </li>
