<% provide(:title, "User index") %>

<div class="listing table-responsive">
<span class="listingh">Listing lunch buddies for <%=current_user.username%></span>
<br>

<ul class="dividedList">
  <% @users.each do |user| %>
    <li>
      <div class="figureset">
        <%= link_to gravatar_for(user), user %>
        <div class="figureset-description">
          <h5><%= user.username %></h5>
          <h6><%= user.email %></h6>

        </div>
      </div>
    </li>
  <% end %>
  <br >
</div>
</ul>

